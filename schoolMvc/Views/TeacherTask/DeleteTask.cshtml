@model TaskVM

@{
    ViewData["Title"] = "Delete Task";

}

<h1>Delete for @Model.Description</h1>

<div class="row text">
    <div class="col-md-8 offset-2">
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="DeleteTask">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Date" class="control-label"></label>
                        <input readonly asp-for="Date" class="form-control" />

                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input readonly asp-for="Description" class="form-control" />

                    </div>
                    <div class="form-group">
                        <label asp-for="Period" class="control-label"></label>
                        <input readonly asp-for="Period" class="form-control" />

                    </div>
                    <div class="form-group">
                        <label asp-for="Status" class="control-label"></label>
                        <input readonly asp-for="Status" class="form-control" />

                    </div>

                    <div class="form-group">
                        <input type="submit" value="Delete" class="btn btn-outline-danger float-right" />
                        <a class="btn btn-outline-secondary" asp-action="ShowTaskTeacher">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>