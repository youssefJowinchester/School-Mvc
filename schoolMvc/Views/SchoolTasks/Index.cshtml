@model IEnumerable<TaskShow>
@{
    ViewData["Title"] = "Index";
}

<h1>All Tasks</h1>
<br />
<br />


@if (TempData["Message"] != null)
{
    <div class="alert alert-primary">
        <p>@TempData["Message"]</p>
    </div>
}


<a asp-action="Create" asp-controller="SchoolTasks" class="btn btn-primary">Create Task</a>
<br />
<br />


@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Date)</th>
                <th>@Html.DisplayNameFor(D => D.Description)</th>
                <th>@Html.DisplayNameFor(D => D.Period)</th>
                <th>@Html.DisplayNameFor(D => D.TeacherName)</th>
                <th>@Html.DisplayNameFor(D => D.StudentName)</th>
                <th>@Html.DisplayNameFor(D => D.Status)</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>@task.Date</td>
                    <td>@task.Description</td>
                    <td>@task.Period</td>
                    <td>@task.TeacherName</td>
                    <td>@task.StudentName</td>
                    <td>@task.Status</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h3>There is No Tasks:(</h3>
    </div>
}

