@model RoleViewModel

@{
    ViewData["Title"] = "Update Role";
}
<h1>Update Role for @Model.roleName</h1>
<div class="row text">
    <div class="col-md-8 offset-2">

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit" method="post">

                    <div class="form-group">
                        <label asp-for="Id" class="control-label"></label>
                        <input readonly asp-for="Id" class="form-control" />
                    </div>
                    <partial name="RolePartialView/_CreateEditRolePartialView" />
                    <a class="btn btn-success" asp-route-roleId="@Model.Id" asp-action="AddOrRemoveUser">Add Or Remove User</a>
                    <div class="form-group">
                        <input type="submit" value="Edit" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section ValidationScriptSection {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
